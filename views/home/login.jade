extend ../layout

block body
    .panel
      .header
        ul.breadcrumb
          li
            a(href='/') 主页
            span.divider /
          li.active 登录
      .inner
        form#signin_form.form-horizontal(action='/do/login', method='post')
          .control-group
            label.control-label 学号
            .controls
              input.input-xlarge(name='username', size='30', type='text')
          .control-group
            label.control-label 密码
            .controls
              input.input-xlarge(name='password', size='30', type='password')
          .form-actions
            input.btn(type='submit', value='登录')