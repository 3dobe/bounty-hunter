extend ../layout

block body
  #content
    .panel
      .header
        ul.breadcrumb
          li
            a(href='/') 主页
            span.divider /
          li.active 登录
      .inner
        - if(typeof(error) !== 'undefined' && error){
          .alert.alert-error
            a.close(data-dismiss='alert', href='#') ×
            strong #{error}
        - }
        form#signin_form.form-horizontal(action='/do/login', method='post')
          .control-group
            label.control-label(for='name') 用户名
            .controls
              input#name.input-xlarge(name='username', size='30', type='text')
          .control-group
            label.control-label(for='pass') 密码
            .controls
              input#pass.input-xlarge(name='password', size='30', type='password')
          label
            input(type="radio", name="option", value="user", checked)
            | 用户
          label
            input(type="radio", name="option", value="admin")
            | 管理员
          .form-actions
            input.btn(type='submit', value='登录')
