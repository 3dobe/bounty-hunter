doctype
html
  head
    title= title

    // Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")

    link(rel="stylesheet", href="/styles/cnode.css")

    block styles

  body

    .navbar
      .navbar-inner
        .container
          a.brand(href='/')
            img(src='/public/images/logo.png', title='Node.js专业中文社区')
          form#search_form.navbar-search(action='/search')
            input#q.search-query.span3(type='text', name='q', value='')
          ul.nav.pull-right
            li
              a(href='/') 首页
            li
              a(href='https://github.com/cnodejs/nodeclub/wiki/') Wiki
            li
              a(href='/signup') 注册
            li
              a(href='/signin') 登录
          a#responsive-sidebar-trigger.btn.btn-navbar
            span.icon-bar
            span.icon-bar
            span.icon-bar

    #main
      #sidebar
        .panel
          .header
            span.col_fade 关于
          .inner
            p CNode：Node.js专业中文社区
            p 在这里你可以：
            ul
              li 向别人提出你遇到的问题
              li 帮助遇到问题的人
              li 分享自己的知识
              li 和其它人一起进步
      block body

    // A few key dependencies, linked in order

    // Bring in the socket.io client
    script(type="text/javascript", src="/js/socket.io.js")

    // then beef it up with some convenience logic for talking to Sails.js'
    script(type="text/javascript", src="/js/sails.io.js")

    // listen on socket.io for incoming messages
    script(type="text/javascript", src="/js/app.js")
